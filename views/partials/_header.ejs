<h1>Shorten Your URL</h1>
<h3><%= username %></h3>
<% if (username) { %>
  <form action ="/urls/logout" method="POST" style ="margin:20px;">
    <input type="submit" value="Logout">
  </form>
<% } else { %>
<form action="/urls/login" method="POST" style="margin:20px;">
      <label for="username">Username:</label>
      <input id="username" type="text" name="username" placeholder= username style="width: 300px">
      <input type="submit" value="Login">
</form>
<a href="/urls/registration">Register</a>

<% } %>

